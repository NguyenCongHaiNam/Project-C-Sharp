@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}
@{
    var user = HttpContextAccessor.HttpContext.Session.GetString("FullName");
    var email = HttpContextAccessor.HttpContext.Session.GetString("Email");
}

<main class="container mt-4">
    <div class="row">
        <div class="col">
            <h1 class="display-4">Dashboard</h1>
            <p class="lead">
                            Welcome, @user
            </p>
            <p>Đây là dashboard của bạn. Dưới đây là một số chức năng và thông tin mà bạn có thể quan tâm:</p>
        </div>
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-pie me-1"></i>
                    Analytics results detected by users 
                </div>
                <div class="card-body"><canvas id="myPieChart" width="100%" height="50"></canvas></div>
                <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
            </div>
        </div>
    </div>
</main>
<script>
    var Datas = @Html.Raw(ViewBag.json);
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.12/signalr.min.js"></script>
<script src="/Admin/js/site.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
<script src="/Admin/assets/demo/chart-pie-demo.js"></script>