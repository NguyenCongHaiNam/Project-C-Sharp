                                </nav>
                            </div>
                        </div>
                    </div>
                    <div class="sb-sidenav-footer">
                        <div class="small">@{
                                var user = HttpContextAccessor.HttpContext.Session.GetString("FullName");
                            }
                            Logged in as: @if (!string.IsNullOrEmpty(user))
                                    {
                                        <div class="d-inline">@user</div>
                                    }
                                    else
                                    {
                                        <div class="d-inline">Guest</div>
                                    }
                        </div>
